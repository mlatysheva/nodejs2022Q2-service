// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id
  login String
  hash String
  version Int @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
}

model Album {
  id String @id
  name String
  year Int?
  artistId String?
}

model Artist {
  id String @id
  name String
  grammy Boolean?
}

model Favorite {
  id String @id
  artists String[]
  albums String[]
  tracks String[]
}

model Track {
  id String @id
  name String
  artistId String?
  albumId String?
}
